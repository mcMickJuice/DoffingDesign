@model DoffingDesign.Service.Models.Project



<div class="project-view container">
    <div class="row">
        <div class="side-text col-xs-4">
            <div class="project-description">
                @Html.Raw(@Model.ProjectHtml)
            </div>

            <div class="purchase-detail">
                <p>Want to buy this print? (@Html.DisplayFor(m => m.Society6Id))</p>
                <p>
                    Check it out on <a href="@Model.Society6Link">Society6</a>
                </p>
            </div>

        </div>
        <div class="main-image col-xs-8">
            @foreach (var item in @Model.ProjectItems
                .OrderBy(p => p.IsThumb)
                .ThenBy(p => p.ImageName))
            {
                <img src="@item.ImageUrl" alt="@item.AltText" data-hover="@item.ImageCaption"/>
            }

        </div>



    </div>
</div>

