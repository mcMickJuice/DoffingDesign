@{
    var year = DateTime.Now.Year;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alexandra Doffing Design</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("head", false)
</head>
<body>

    <div class="header">
        <div class="container">
            <div class="row">
                <div class="logo col-xs-5">
                    <a style="display: block;" href="/">
                        <div class="logo-image">
                        </div>
                        <div class="site-name">
                            <ul>
                                <li>Alexandra</li>
                                <li>Doffing</li>
                                <li>Design</li>
                            </ul>

                        </div>
                    </a>
                </div>
                <div class="site-links-icon"></div>
                <div class="navigation col-xs-7">
                    <nav class="site-links">
                        <ul>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li><a href="~/Project/FineArt">Fine Art</a></li>
                            <li><a href="~/Project/Illustration">Illustration</a></li>
                            <li><a href="~/Project/Pattern">Patterns</a></li>
                            @*                            <li>Blog</li>*@
                            @*                            <li>Shop</li>*@
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            @*                            <li>@Html.ActionLink("Admin", "Index", "ProjectAdmin")</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        @RenderSection("adminNotice", false)
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container">
        <div class="footer row">
            <div class="col-md-7">
                <div class="copyright">
                    &copy; @year <span>&middot;</span> All Rights Reserved <span>&middot;</span>  Alexandra Doffing Design, LLC
                </div>
            </div>
            <div class="col-md-5">
                <div class="social-links">
                    <div class="tumblr">
                        <a href="http://doffingdesign.tumblr.com/" target="_blank"></a>
                    </div>
                    <div class="dribbble">
                        <a href="https://dribbble.com/alexandradoffing" target="_blank"></a>
                    </div>
                    <div class="instagram">
                        <a href="http://instagram.com/doffingdesign" target="_blank"></a>
                    </div>
                    <div class="behance">
                        <a href="https://www.behance.net/AlexandraDoffing" target="_blank"></a>

                    </div>
                    <div class="linkedin">
                        <a href="https://www.linkedin.com/pub/alexandra-doffing/20/2b3/624" target="_blank"></a>
                    </div>
                    <div class="facebook">
                        <a href="https://www.facebook.com/doffingdesign" target="_blank"></a>

                    </div>
                    <div class="twitter">
                        <a href="https://twitter.com/doffingdesign" target="_blank"></a>
                    </div>
                    <div class="etsy">
                        <a href="https://www.etsy.com/shop/DoffingDesign?ref=hdr_shop_menu" target="_blank"></a>
                    </div>
                    <div class="society6">
                        <a href="https://society6.com/doffingdesign" target="_blank"></a>

                    </div>

                </div>

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
